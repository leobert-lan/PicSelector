<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_select_bg"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/item_image_cover"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder" />

    <TextView
        android:id="@+id/item_tv_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/item_image_cover"
        android:text="@string/txt_folder_camera"
        android:textColor="@color/ucrop_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_tv_media_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/item_tv_folder_name"
        android:text="(0)"
        android:textColor="@color/ucrop_grey"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/item_img_access_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/more_1x" />

    <TextView
        android:id="@+id/item_tv_selected_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/item_img_access_detail"
        android:background="@drawable/message_oval"
        android:gravity="center"
        android:text="@string/num_zero"
        android:textColor="@color/ucrop_color_toolbar_widget"
        android:textSize="12sp"
        android:visibility="invisible" />

</RelativeLayout>